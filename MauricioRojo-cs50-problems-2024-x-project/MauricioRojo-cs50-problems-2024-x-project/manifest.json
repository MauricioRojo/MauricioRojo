{
    "manifest_version": 3,
    "name": "Text Translator",
    "version": "1.0",
    "description": "Translate selected text",
    "permissions": [
      "contextMenus",
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "extension.jpg"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "extension.jpg"
      }
    }
  }
